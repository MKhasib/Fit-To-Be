<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/exercise_app_bar_layout" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:showFullScreenButton="false" />

    <TextView
        android:id="@+id/finished"
        android:layout_width="@dimen/default_text_width"
        android:layout_height="@dimen/default_text_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_margin_top"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="@string/finished"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginTop="@dimen/sign_up_margin_top"
        android:background="@drawable/rounded_button"
        android:padding="@dimen/sign_up_margin_top"
        android:text="@string/add_to_favorite"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>