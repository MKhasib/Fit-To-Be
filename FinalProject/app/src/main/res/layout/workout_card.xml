<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_card_margin"
    android:focusable="true"
    app:cardCornerRadius="@dimen/default_card_radius"
    app:cardElevation="@dimen/default_card_elevation"
    app:cardMaxElevation="@dimen/default_card_elevation"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workout_name"
            android:layout_width="@dimen/default_text_width"
            android:layout_height="@dimen/default_text_height"
            android:layout_marginStart="@dimen/default_text_margin_start"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/favorite_image_view"
            android:layout_width="@dimen/default_star_size"
            android:layout_height="@dimen/default_star_size"
            android:src="@drawable/star"
            android:scaleType="fitXY" />

    </LinearLayout>
</androidx.cardview.widget.CardView>